// 全局工具类样式
common-border(deg)
  content ' '
  position absolute
  left 0
  width 100%
  height 1px
  z-index 0
  transition all .2s
  background var(--border)
  transform scaleY(0.5)
  transform-origin 50%100%

common-border-vertivcle(deg)
  content ' '
  position absolute
  width 1px
  height 100%
  z-index 0
  transition all .2s
  background $border
  transform scaleX(0.5)
  transform-origin 100%50%


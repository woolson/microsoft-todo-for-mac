.u-radius
  border-radius .05rem

.u-mtauto
  margin-top auto !important
.u-mrauto
  margin-right auto !important
.u-mbauto
  margin-bottom auto !important
.u-mlauto
  margin-left auto !important

.u-flex-1
  flex 1

.u-center-center
  display flex
  align-items center
  justify-content center

.u-center-center_
  @extend .u-center-center
  flex-direction column

.u-center-between
  display flex
  align-items center
  justify-content space-between

.u-center-start
  display flex
  align-items center
  justify-content flex-start

.u-center-end
  display flex
  align-items center
  justify-content flex-end

.u-end-center
  display flex
  align-items flex-end
  justify-content center

.u-baseline-center
  display flex
  align-items baseline
  justify-content center

.u-text-center
  text-align center !important
.u-text-left
  text-align left !important
.u-text-right
  text-align right !important

.u-nowrap
  white-space nowrap !important

.u-disabled
  color $color-disabled

.u-delete
  color $font-color-gray
  text-decoration line-through

.u-bold
  font-weight bold

.u-hidden
  display none

.u-pointer
  cursor pointer

.u-highlight
  color $blue !important

.u-underline
  text-decoration underline !important

.u-main
  color $background !important

.u-red
  color $red !important

.u-green
  color $green !important

.u-gray
  color $gray !important

.u-bt
  position relative
  &:before
    top 0
    common-border(180deg)

.u-bb
  position relative
  &:after
    bottom 0
    transition all .2s
    common-border(360deg)

.u-bl
  position relative
  &:after
    left 0
    common-border-vertivcle(90deg)

.u-br
  position relative
  &:after
    right 0
    common-border-vertivcle(270deg)

.u-transparent
  opacity 0 !important

.u-clear-outline
  outline none !important

.u-bounce
  animation bounceIn .75s

.u-form__row-section
  padding 0 12px
  margin-bottom 10px

.u-form__row
  display flex
  align-items center
  justify-content space-between
  min-height 40px
  padding 12px
  box-sizing border-box
  color var(--text-main)
  font-size 14px
  user-select none
  background var(--background-section)
  transition background .2s
  @extend .u-bb
  > label
    margin-right 10px
    white-space nowrap
    color var(--text-sub)
    flex-shrink 0
  &:first-child
    border-top-left-radius 5px
    border-top-right-radius 5px
  &:last-child
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px
    &:after
      display none
  &:hover:not(.disabled)
    background var(--background-section-hover)

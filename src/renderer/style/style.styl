:root
  // Background
  --background-sidebar $sidebar-light
  --background white
  --background-content white
  --background-section #F8F8FA
  --background-section-hover rgba($blue, .15)
  // Text
  --text-main $text
  --text-sub $gray
  // Border
  --border $border
  --border-arrow $arrow
  // Task-Folder
  --folder-background rgba(black, .08)
  --folder-color #333333
  // Task
  --task-background-active linear-gradient(45deg, $blue, $purple)
  --task-info-background rgba(white, .4)

[data-theme="theme-dark"]
  // Background
  --background-sidebar $sidebar-dark
  --background $background-dark
  --background-content $background-dark-content
  --background-section $background-dark-section
  --background-section-hover rgba(black, .25)
  // Text
  --text-main #BBBBBB
  --text-sub $text-light
  // Border
  --border #222
  --border-arrow $background-dark
  // Task-Folder
  --folder-background rgba(black, .3)
  --folder-color #BBBBBB
  // Task
  --task-background-active $background-dark
  --task-info-background darken($background-dark-section, 1.5)

::selection
  background $blue
  color white

*:not(input,textarea)
  outline none
  user-select none

html
  font-size 50px
  font-family Helvetica Neue,Helvetica,PingFang SC,Hiragino Sans GB,Microsoft YaHei,SimSun,sans-serif

body
  padding 0
  margin 0
  background white
  min-width 300px
  font-size .24rem

// ===== element-ui =====
.el-notification
  display flex
  align-items center
  width 180px
  padding .2rem
  // top 10px !important
  right 10px !important
  border none
  border-radius .1rem
  h2
    font-size .26rem
    color $background
  i
    height auto
    font-size .34rem

.el-notification__closeBtn
  top 11px

.el-message-box
  border none

.el-message--success
  background $green
  border-color $green

.el-message--error
  background $red
  border-color $red

.el-message--info
  background $text-light
  border-color $text-light

.el-button--success:not(.is-plain)
  background $green
  border-color $green

.el-popover
  padding 0

.el-message
  min-width 50px
  padding 5px 15px 5px 20px
  border-radius 0 0 4px 4px
  top 0
  left 70px
  transform translateX(0)
  p, i
    color white !important

.el-message__icon
  font-size $size-text-medium

.el-message-box
  padding-bottom 15px

.el-message-box__header
  padding-top 15px !important

.el-message-box__btns
  button
    width 120px

.el-alert
  padding 5px 16px
  border-radius 0

.el-alert__title
.el-alert__icon
  $size-text-small
  user-select none

.el-input__inner
  padding-right 5px

.el-date-editor.el-input
  width auto

.el-input__inner
.el-select-dropdown
.el-alert--info
.el-input__inner
.el-picker-panel
.el-picker-panel__footer
.el-message-box
  background var(--background-section)

.el-popover
.el-select-dropdown
  background var(--background-content)

.el-popover
.el-button--default
.el-date-picker__time-header
.el-picker-panel
.el-picker-panel__footer
.el-date-table th
  border-color var(--border)

.el-input__inner
.el-select-dropdown
  border-color var(--background-section)

.el-select-dropdown__item
.el-input__inner
.el-date-table__row .available
.el-picker-panel__icon-btn
  color var(--text-main) !important

.el-date-table__row .prev-month
.el-date-table__row .next-month
  color var(--text-main) !important

.el-input__inner::-webkit-input-placeholder
  color var(--text-sub)

.el-popover
.el-popper
  .popper__arrow
    border-bottom-color var(--border-arrow) !important
  .popper__arrow::after
    border-bottom-color var(--background-content) !important

.el-time-panel
  left auto !important
  right 0

.el-select-dropdown__item.hover
// .el-button--default
.el-input input
  background var(--background) !important

.el-select-dropdown__item
  max-width 180px
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.el-button--default
.el-radio-button__inner
  border none !important
  background var(--background)

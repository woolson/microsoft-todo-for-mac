darkTheme() {
  // Background
  --background-sidebar linear-gradient(0, $sidebar-dark, darken($sidebar-dark, 20))
  --background-right-content rgba(#222529, .88)

  --background $background-dark
  --background-content $background-dark-content
  --background-section $background-dark-section
  // Text
  --text-main #BBBBBB
  --text-sub $text-light
  --text-placeholder rgba(#BBBBBB, .3)
  // Border
  --border #222
  --border-arrow $background-dark
  // Task-Folder
  --folder-background rgba(black, .3)
  --folder-color #BBBBBB
  // Task
  --task-background-active $background-dark
  --task-info-background darken($background-dark-section, 1.5)
}

lightTheme() {
  // Background
  // --background-sidebar $sidebar-light
  --background-sidebar linear-gradient(0, lighten($sidebar-light, 50), $sidebar-light)
  --background-right-content rgba(#EFEFEF, .8)

  --background white
  --background-content white
  --background-section #F8F8FA
  // Text
  --text-main $text
  --text-sub $gray
  --text-placeholder rgba($text, .3)
  // Border
  --border $border
  --border-arrow $arrow
  // Task-Folder
  --folder-background rgba(black, .08)
  --folder-color #333333
  // Task
  --task-background-active #EEEEEE
  // --task-background-active linear-gradient(45deg, $blue, $purple)
  --task-info-background rgba(white, .4)
}

:root
  lightTheme()

@media (prefers-color-scheme: dark)
  :root
    darkTheme()

::selection
  background $blue
  color white

::-webkit-input-placeholder
  color var(--text-placeholder) !important

*:not(input,textarea)
  outline none
  user-select none

html
  font-size 50px
  background transparent
  font-family $font-family
  *
    font-family $font-family

body
  padding 0
  margin 0
  background transparent
  min-width 300px
  font-size .24rem

// ===== element-ui =====
.el-notification
  display flex
  align-items center
  width 180px
  padding .2rem
  // top 10px !important
  right 10px !important
  border none
  border-radius .1rem
  h2
    font-size .26rem
    color $background
  i
    height auto
    font-size .34rem

.el-notification__closeBtn
  top 11px

.el-message-box
  border none

.el-message--success
  background $green
  border-color $green

.el-message--error
  background $red
  border-color $red

.el-message--info
  background $text-light
  border-color $text-light

.el-button--success:not(.is-plain)
  background $green
  border-color $green

.el-button.is-plain:hover
  background var(--background) !important

.el-popover
  padding 0

.el-message
  min-width 50px
  padding 5px 15px 5px 20px
  border-radius 0 0 4px 4px
  top 0
  left 70px
  transform translateX(0)
  p, i
    color white !important

.el-message__icon
  font-size $size-text-medium

.el-message-box
  padding-bottom 15px

.el-message-box__header
  padding-top 15px !important

.el-message-box__btns
  button
    width 120px

.el-alert
  padding 5px 16px
  border-radius 0

.el-alert__title
.el-alert__icon
  $size-text-small
  user-select none

.el-input__inner
  padding-right 5px

.el-date-editor.el-input
  width auto

.el-date-picker
  width 275px
  .el-date-table td
    padding 0
  .el-picker-panel__content
    width 250px
  .el-date-picker__header
    margin 5px 12px 0
  .el-picker-panel__content
    margin 0 12px 5px

